<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Vista Principal para la Gestión de Clientes (Refactorizada)
    Ahora solo contiene la estructura base y carga los componentes mediante <fx:include>.
    El controlador asociado sigue siendo 'com.erp.controller.ClienteController'.
-->
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.erp.controller.ClienteController" prefWidth="800" prefHeight="600"
    stylesheets="@../css/estilo.css">

    <StackPane fx:id="zonaContenidoCliente" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" styleClass="panel-contenido">

        <ScrollPane styleClass="panel-scroll-pane">

            <VBox spacing="10" prefWidth="600">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>

                <Label text="Gestión de Clientes" styleClass="titulo-panel" />

                <HBox fx:id="subMenuAcciones" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    <Button fx:id="botonAñadirCliente" text="Añadir" prefWidth="100" prefHeight="40"
                        onAction="#mostrarVistaAñadir" styleClass="button-cliente" />
                    <Button fx:id="botonBuscarCliente" text="Buscar" prefWidth="100" prefHeight="40"
                        onAction="#mostrarVistaBuscar" styleClass="button-cliente" />
                </HBox>

                <!-- 
                    Zona dinámica que carga los formularios como componentes.
                    Se les asigna un fx:id para poder acceder a sus controladores desde ClienteController.
                -->
                <StackPane fx:id="zonaFormulariosCliente" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
                    <Label fx:id="inicioCliente" managed="true" />

                    <!-- Componente del formulario de añadir/modificar -->
                    <fx:include fx:id="formAnadir" source="components/cliComp/cliente-formulario-anadir.fxml" />

                    <!-- Componente del formulario de búsqueda -->
                    <fx:include fx:id="formBuscar" source="components/cliComp/cliente-formulario-buscar.fxml" />
                </StackPane>

                <Label text="Listado de Clientes" styleClass="subtitulo-panel " />

                <!-- Componente de la tabla de clientes -->
                <fx:include fx:id="tablaClientes" source="components/cliComp/cliente-tabla.fxml" />

            </VBox>
        </ScrollPane>
    </StackPane>
</AnchorPane>
