<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.erp.controller.components.cliComp.ClienteSeleccionDialogoController">
    <Label text="Seleccionar Cliente" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="5.0">
        <TextField fx:id="campoBusquedaCliente" promptText="Buscar cliente por nombre o NIF" HBox.hgrow="ALWAYS"/>
        <Button text="Buscar" onAction="#buscarCliente"/>
    </HBox>

    <TableView fx:id="tablaClientes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="columnaNombre" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="columnaNIF" text="NIF/CIF" prefWidth="100"/>
            <TableColumn fx:id="columnaEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="columnaTelefono" text="TelÃ©fono" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Seleccionar" onAction="#seleccionar"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>
</VBox>