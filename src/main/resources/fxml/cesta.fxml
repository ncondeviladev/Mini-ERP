<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.erp.controller.CestaController"
            prefWidth="900" prefHeight="700" stylesheets="@../css/estilo.css">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
        </padding>

        <Label text="Cesta de Compra" styleClass="titulo-panel" />

        <!-- Incluir la tabla de la cesta -->
        <fx:include fx:id="cestaTablaComponente" source="components/ventaComp/venta-cesta-tabla.fxml"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Total Cesta:"/>
            <Label fx:id="labelTotalCesta" text="0.00â‚¬" styleClass="label-total"/>
        </HBox>

        <Label text="Seleccionar Cliente" styleClass="subtitulo-panel" />

        <!-- Incluir la tabla de clientes -->
        <fx:include fx:id="clienteTablaComponente" source="components/cliComp/cliente-tabla.fxml"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="botonAplicarDescuentos" text="Aplicar Descuentos" onAction="#aplicarDescuentos" styleClass="boton-accion"/>
            <Button fx:id="botonFinalizarVenta" text="Finalizar Venta" onAction="#finalizarVenta" styleClass="boton-primario"/>
            <Button fx:id="botonCancelar" text="Cancelar" onAction="#cancelarVenta" styleClass="boton-secundario"/>
        </HBox>

    </VBox>
</AnchorPane>