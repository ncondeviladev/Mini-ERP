<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.erp.controller.CestaController"
            prefWidth="800" prefHeight="600" stylesheets="@../css/estilo.css">

    <StackPane AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
               styleClass="panel-contenido">
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <Label text="Cesta de Compra" styleClass="titulo-panel" />

            <!-- Incluir la tabla de la cesta -->
            <fx:include fx:id="cestaTablaComponente" source="components/ventaComp/venta-cesta-tabla.fxml" VBox.vgrow="ALWAYS"/>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total Cesta:"/>
                <Label fx:id="labelTotalCesta" text="0.00â‚¬" styleClass="label-total-cesta"/>
            </HBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="botonLimpiarCesta" text="Limpiar Cesta" onAction="#limpiarCesta" styleClass="boton-rojo"/>
                <Button fx:id="botonVolver" text="Volver a Productos" onAction="#volverAVentas" styleClass="boton-secundario"/>
                <Button fx:id="botonConfirmarCesta" text="Confirmar Cesta" onAction="#procederConCesta" styleClass="boton-primario"/>
            </HBox>

        </VBox>
    </StackPane>
</AnchorPane>